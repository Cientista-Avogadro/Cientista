<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtnomes2"
        android:layout_width="410dp"
        android:layout_height="111dp"
        android:background="#424344"
        android:gravity="center"
        android:text="Calculo de peso"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="268dp"
        android:layout_height="212dp"
        android:background="#77565D"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424">

        <EditText
            android:id="@+id/txtpeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Insira o peso"
            android:inputType="numberDecimal"
            android:textColorHint="#2B2929" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="submit"
            android:text="Submit" />

        <TextView
            android:id="@+id/peso15"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:hint="Peso 15%"
            android:textColor="#0000FD"
            android:textColorHint="#203472" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/peso20"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:hint="Peso 20%"
            android:textColor="#0000FD"
            android:textColorHint="#203472" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>