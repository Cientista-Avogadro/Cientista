<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtnomes2"
        android:layout_width="410dp"
        android:layout_height="111dp"
        android:background="#424344"
        android:gravity="center"
        android:text="Seja Bem vindo ao Ceforc"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="329dp"
        android:layout_height="346dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <EditText
            android:id="@+id/prfabrica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite o preço de Fabrica do seu automovel"
            android:inputType="textPersonName"
            android:textColor="@color/design_default_color_on_primary"
            android:textColorHint="@color/design_default_color_primary_dark" />

        <EditText
            android:id="@+id/prlucro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite o percentual de lucro"
            android:inputType="textPersonName"
            android:textColor="@color/design_default_color_on_primary"
            android:textColorHint="@color/purple_700" />

        <EditText
            android:id="@+id/primposto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite o percentual de imposto"
            android:inputType="textPersonName"
            android:textColor="@color/design_default_color_on_primary"
            android:textColorHint="@color/purple_700" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="submit"
            android:text="Submit" />

        <TextView
            android:id="@+id/lucro"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#424344"
            android:gravity="center"
            android:hint="lucro do distribuidor"
            android:textColor="@color/design_default_color_on_secondary"
            android:textColorHint="@color/purple_700"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/impostos"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#424344"
            android:gravity="center"
            android:hint="impostos"
            android:textColor="@color/design_default_color_on_secondary"
            android:textColorHint="@color/purple_700"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/prveiculofinal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#424344"
            android:gravity="center"
            android:hint="preço final do veículo"
            android:textColor="@color/design_default_color_on_secondary"
            android:textColorHint="@color/purple_700"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>